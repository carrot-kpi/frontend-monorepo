{
  "name": "@carrot-kpi/v1-monorepo",
  "version": "1.0.0",
  "description": "A monorepo for Carrot v1 packages.",
  "author": "Federico Luzzi",
  "license": "GPL-3.0",
  "scripts": {
    "lint:code:all": "npm run lint:code --workspaces",
    "test:all": "npm run test --workspaces",
    "size-check:all": "npm run size-limit --workspaces --if-present",
    "lint:commit-message": "commitlint -e",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "husky": "^8.0.1"
  }
}
