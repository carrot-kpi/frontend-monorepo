{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "sync-fathom-events": {
            "env": ["REACT_APP_FATHOM_SITE_ID", "REACT_APP_FATHOM_API_KEY"]
        },
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", "build/**"]
        },
        "build-library": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "build-storybook": {
            "dependsOn": ["^build"],
            "outputs": ["storybook-static/**"]
        },
        "test": {
            "inputs": [
                "src/**/*.{ts,tsx}",
                "tests/**/*.{ts,tsx}",
                "src/**/*.test.{ts,tsx}",
                "src/**/*.sol",
                "tests/**/*.sol",
                "babel.config.json"
            ]
        },
        "start": {
            "dependsOn": ["^build"]
        },
        "publish": {
            "dependsOn": ["^build"]
        },
        "size-limit": {
            "dependsOn": ["build"]
        },
        "lint": {},
        "format": {}
    },
    "globalEnv": [
        "NODE_ENV",
        "REACT_APP_FATHOM_SITE_ID",
        "REACT_APP_FATHOM_API_KEY"
    ]
}
