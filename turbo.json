{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "build:production": {
            "dependsOn": ["^build"],
            "outputs": ["build/**"]
        },
        "build:staging": {
            "dependsOn": ["^build"],
            "outputs": ["build/**"]
        },
        "build:library": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "build:storybook": {
            "dependsOn": ["^build"],
            "outputs": ["storybook-static/**"]
        },
        "test": {
            "inputs": [
                "src/**/*.{ts,tsx}",
                "tests/**/*.{ts,tsx}",
                "src/**/*.test.{ts,tsx}",
                "babel.config.json"
            ]
        },
        "test:gui": {
            "inputs": ["src/**/*.{ts,tsx}", "tests/**/*.gui.{ts}"],
            "dependsOn": ["^build"]
        },
        "start": {
            "dependsOn": ["^build"]
        },
        "size-limit": {
            "dependsOn": ["^build"]
        },
        "lint": {},
        "format": {}
    },
    "globalEnv": [
        "NODE_ENV",
        "INFURA_PROJECT_ID",
        "WALLETCONNECT_PROJECT_ID",
        "FATHOM_SITE_ID",
        "FATHOM_API_KEY",
        "CI",
        "STAGING",
        "METAMASK_VERSION",
        "HEADLESS_MODE"
    ]
}
