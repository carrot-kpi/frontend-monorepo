{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", "build/**"]
        },
        "test": {
            "inputs": [
                "src/**/*.{ts,tsx}",
                "tests/**/*.{ts,tsx}",
                "src/**/*.test.{ts,tsx}",
                "src/**/*.sol",
                "tests/**/*.sol",
                "babel.config.json"
            ]
        },
        "start": {
            "dependsOn": ["^build"]
        },
        "publish": {
            "dependsOn": ["^build"]
        },
        "size-limit": {
            "dependsOn": ["build"]
        },
        "lint": {},
        "format": {}
    },
    "globalEnv": ["NODE_ENV"]
}
