{
    "name": "@carrot-kpi/host-frontend",
    "license": "GPL-3.0-or-later",
    "version": "0.3.1",
    "description": "Frontend for Carrot KPI protocol v1.",
    "main": "./dist/bootstrap.js",
    "module": "./dist/bootstrap.js",
    "types": "./dist/bootstrap.d.ts",
    "exports": {
        ".": {
            "import": "./dist/bootstrap.js"
        },
        "./styles.css": {
            "import": "./dist/styles.css"
        },
        "./shared-dependencies.json": {
            "import": "./shared-dependencies.json",
            "require": "./shared-dependencies.json"
        }
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "lint": "eslint --ext .tsx,.ts ./src && prettier --check './**/*.{json,md}'",
        "format": "eslint --fix --ext .tsx,.ts,.js ./ && prettier --write './**/*.{json,md}'",
        "clean": "rimraf ./build && rimraf ./dist",
        "build": "yarn build:production",
        "build:production": "yarn clean && yarn config-react-env production && yarn prepare-fathom && GENERATE_SOURCEMAP=false craco build",
        "build:staging": "yarn clean && yarn config-react-env staging && yarn prepare-fathom && GENERATE_SOURCEMAP=false STAGING=true craco build",
        "build:library": "yarn clean && yarn config-react-env library && yarn prepare-fathom && rollup -c rollup.config.mjs",
        "test": "react-scripts test --env=jsdom --watchAll=false --passWithNoTests",
        "size-limit": "size-limit",
        "prepare-fathom": "prepare-fathom",
        "config-react-env": "./scripts/config-react-env.js",
        "start": "yarn config-react-env && craco start",
        "start:staging": "yarn config-react-env && STAGING=true craco start"
    },
    "dependencies": {
        "@carrot-kpi/react": "*",
        "@carrot-kpi/sdk": "*",
        "@carrot-kpi/ui": "*",
        "class-variance-authority": "^0.6.0",
        "dayjs": "^1.11.7",
        "ethereum-blockies-base64": "^1.0.2",
        "ethers": "^5.7.1",
        "react-router-dom": "^6.11.0",
        "sanitize-html": "^2.9.0",
        "use-fathom-client": "^1.2.0"
    },
    "peerDependencies": {
        "@carrot-kpi/shared-state": "*",
        "@carrot-kpi/switzer-font": "^0.1.0",
        "@fontsource/ibm-plex-mono": "^4.5.13",
        "@tanstack/react-query": "^4.24.9",
        "i18next": "^22.0.2",
        "react": "^18.2.0",
        "react-i18next": "^12.0.0",
        "wagmi": "^0.12.12"
    },
    "devDependencies": {
        "@carrot-kpi/shared-state": "*",
        "@carrot-kpi/switzer-font": "^0.1.0",
        "@craco/craco": "^7.1.0",
        "@fontsource/ibm-plex-mono": "^4.5.13",
        "@react-spring/web": "^9.7.2",
        "@rollup/plugin-commonjs": "^24.1.0",
        "@rollup/plugin-json": "^6.0.0",
        "@rollup/plugin-node-resolve": "^15.0.2",
        "@rollup/plugin-replace": "^5.0.2",
        "@size-limit/file": "^8.1.0",
        "@tanstack/react-query": "^4.29.5",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.1",
        "@types/react-router-dom": "^5.3.3",
        "@types/rollup-plugin-peer-deps-external": "^2.2.1",
        "@types/sanitize-html": "^2.9.0",
        "autoprefixer": "^10.4.14",
        "buffer": "^6.0.3",
        "cross-env": "^7.0.3",
        "dotenv": "^16.0.3",
        "eslint-config-custom": "*",
        "i18next": "^22.4.15",
        "postcss": "^8.4.23",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-i18next": "^12.2.2",
        "react-scripts": "^5.0.1",
        "react-use": "^17.4.0",
        "rimraf": "^5.0.0",
        "rollup": "^3.21.3",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "rollup-plugin-postcss": "^4.0.2",
        "rollup-plugin-typescript2": "^0.34.0",
        "size-limit": "^8.1.0",
        "tailwindcss": "^3.3.2",
        "tsconfig": "*",
        "typescript": "^5.0.4",
        "wagmi": "^0.12.12",
        "workbox-precaching": "^6.5.4",
        "workbox-routing": "^6.5.4"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
