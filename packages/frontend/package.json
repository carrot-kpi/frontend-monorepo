{
    "name": "@carrot-kpi/frontend",
    "license": "GPL-3.0-or-later",
    "version": "1.0.0-rc.2",
    "description": "Frontend for Carrot KPI protocol v1.",
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "shared-dependencies.json"
    ],
    "scripts": {
        "lint": "eslint --ext .tsx,.ts ./src && prettier --check './*.{json,.md}'",
        "format": "eslint --fix --ext .tsx,.ts,.js ./ && prettier --write './*.{json,.md}'",
        "clean": "rimraf ./build",
        "build": "pnpm clean && GENERATE_SOURCEMAP=false craco build",
        "ipfs-build": "pnpm build && ./scripts/zip.js",
        "test": "react-scripts test --env=jsdom --watchAll=false --passWithNoTests",
        "size-limit": "size-limit",
        "start": "craco start"
    },
    "dependencies": {
        "@carrot-kpi/react": "workspace:*",
        "@carrot-kpi/sdk": "workspace:*",
        "@carrot-kpi/ui": "workspace:*",
        "@emotion/react": "^11.10.4",
        "@fontsource/ibm-plex-mono": "^4.5.13",
        "@popperjs/core": "^2.11.6",
        "class-variance-authority": "^0.4.0",
        "ethers": "^5.7.1",
        "i18next": "^22.0.6",
        "ipfs-core": "^0.15.4",
        "multiformats": "^9.7.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-i18next": "^12.0.0",
        "react-router-dom": "^6.3.0",
        "wagmi": "^0.9.5"
    },
    "devDependencies": {
        "@craco/craco": "^7.0.0",
        "@size-limit/file": "^8.1.0",
        "@types/react": "^18.0.25",
        "@types/react-dom": "^18.0.6",
        "@types/react-router-dom": "^5.3.3",
        "autoprefixer": "^10.4.13",
        "cross-env": "^7.0.3",
        "eslint-config-custom": "workspace:*",
        "postcss": "^8.4.19",
        "react-scripts": "^5.0.1",
        "rimraf": "^3.0.2",
        "size-limit": "^8.1.0",
        "tailwindcss": "^3.2.4",
        "tsconfig": "workspace:*",
        "typescript": "^4.7.4",
        "workbox-precaching": "^6.5.4",
        "workbox-routing": "^6.5.4"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
