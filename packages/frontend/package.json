{
  "name": "@carrot-kpi/frontend",
  "license": "GPL-3.0-or-later",
  "version": "1.0.0-rc.1",
  "description": "Frontend for Carrot KPI protocol v1.",
  "files": [
    "shared-dependencies.json"
  ],
  "scripts": {
    "lint": "prettier --check ./src && eslint --ext .tsx,.ts ./src",
    "lint:fix": "prettier --write ./src && eslint --fix --ext .tsx,.ts ./src",
    "build": "pnpm clean && cross-env PUBLIC_URL=\".\" GENERATE_SOURCEMAP=false react-app-rewired build",
    "clean": "rimraf ./build",
    "test": "react-scripts test --env=jsdom --watchAll=false --passWithNoTests",
    "size-limit": "size-limit",
    "start": "react-app-rewired start"
  },
  "devDependencies": {
    "@carrot-kpi/react": "workspace:../react",
    "@carrot-kpi/sdk": "workspace:../sdk",
    "@carrot-kpi/ui": "workspace:../ui",
    "@emotion/react": "^11.10.4",
    "@size-limit/preset-app": "^8.1.0",
    "@size-limit/webpack-why": "^8.1.0",
    "@types/react-dom": "^18.0.6",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "buffer": "^6.0.3",
    "cross-env": "^7.0.3",
    "decimal.js-light": "^2.5.1",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "ethers": "^5.7.1",
    "git-revision-webpack-plugin": "^5.0.0",
    "i18next": "^21.9.2",
    "ipfs-core": "^0.15.4",
    "multiformats": "^9.7.1",
    "prettier": "^2.7.1",
    "qs": "^6.11.0",
    "react": "^18.2.0",
    "react-app-rewired": "^2.2.1",
    "react-dom": "^18.2.0",
    "react-i18next": "^11.18.6",
    "react-router-dom": "^6.3.0",
    "react-scripts": "^5.0.1",
    "size-limit": "^8.1.0",
    "typescript": "^4.8.4",
    "wagmi": "^0.6.7"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
