{
    "name": "@carrot-kpi/frontend",
    "license": "GPL-3.0-or-later",
    "version": "1.0.0-rc.2",
    "description": "Frontend for Carrot KPI protocol v1.",
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "shared-dependencies.json"
    ],
    "scripts": {
        "lint": "eslint --ext .tsx,.ts ./src",
        "format": "eslint --fix --ext .tsx,.ts ./src",
        "clean": "rimraf ./build",
        "build": "GENERATE_SOURCEMAP=false react-app-rewired build",
        "test": "react-scripts test --env=jsdom --watchAll=false --passWithNoTests",
        "size-limit": "size-limit",
        "start": "react-app-rewired start"
    },
    "devDependencies": {
        "@carrot-kpi/react": "workspace:*",
        "@carrot-kpi/sdk": "workspace:*",
        "@carrot-kpi/ui": "workspace:*",
        "@emotion/react": "^11.10.4",
        "@size-limit/preset-app": "^8.1.0",
        "@size-limit/webpack-why": "^8.1.0",
        "@types/react": "^18.0.25",
        "@types/react-dom": "^18.0.6",
        "@types/react-router-dom": "^5.3.3",
        "buffer": "^6.0.3",
        "cross-env": "^7.0.3",
        "decimal.js-light": "^2.5.1",
        "eslint-config-custom": "workspace:*",
        "ethers": "^5.7.1",
        "git-revision-webpack-plugin": "^5.0.0",
        "i18next": "^22.0.6",
        "ipfs-core": "^0.15.4",
        "multiformats": "^9.7.1",
        "qs": "^6.11.0",
        "react": "^18.2.0",
        "react-app-rewired": "^2.2.1",
        "react-dom": "^18.2.0",
        "react-i18next": "^12.0.0",
        "react-router-dom": "^6.3.0",
        "react-scripts": "^5.0.1",
        "rimraf": "^3.0.2",
        "size-limit": "^8.1.0",
        "tsconfig": "workspace:*",
        "typescript": "^4.7.4",
        "wagmi": "^0.8.5"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
