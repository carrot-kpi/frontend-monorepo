{
    "type": "module",
    "name": "@carrot-kpi/sdk",
    "license": "GPL-3.0-or-later",
    "author": "Federico Luzzi <fedeluzzi00@gmail.com>",
    "version": "1.12.0",
    "description": "An SDK for building applications on top of Carrot v1.",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js"
        }
    },
    "files": [
        "dist"
    ],
    "publishConfig": {
        "access": "public"
    },
    "repository": "https://github.com/carrot-kpi/frontend-monorepo.git",
    "scripts": {
        "lint": "eslint --ext .tsx,.ts ./src && prettier --check './*.{json,.md}'",
        "format": "eslint --fix --ext .tsx,.ts,.js ./ && prettier --write './*.{json,.md}'",
        "build": "pnpm clean && rollup -c rollup.config.js",
        "clean": "rimraf ./dist",
        "test": "jest",
        "size-limit": "size-limit",
        "release": "pnpm publish"
    },
    "dependencies": {
        "@ethersproject/address": "^5.7.0",
        "@ethersproject/bignumber": "^5.7.0",
        "@ethersproject/contracts": "^5.7.0",
        "@ethersproject/providers": "^5.7.2",
        "@ethersproject/units": "^5.7.0",
        "@ethersproject/wallet": "^5.7.0",
        "decimal.js-light": "^2.5.1",
        "ethers": "^5.7.0",
        "multiformats": "^9.9.0"
    },
    "devDependencies": {
        "@babel/core": "^7.19.3",
        "@babel/preset-env": "^7.19.4",
        "@babel/preset-typescript": "^7.18.6",
        "@jest/globals": "^29.2.2",
        "@rollup/plugin-commonjs": "^23.0.2",
        "@rollup/plugin-json": "^5.0.1",
        "@rollup/plugin-node-resolve": "^15.0.1",
        "@size-limit/preset-small-lib": "^8.1.0",
        "@types/jest": "^29.2.1",
        "@types/rollup-plugin-peer-deps-external": "^2.2.1",
        "babel-jest": "^29.2.2",
        "eslint-config-custom": "workspace:*",
        "jest": "^29.2.2",
        "rimraf": "^3.0.2",
        "rollup": "^3.2.3",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript2": "^0.34.0",
        "size-limit": "^8.1.0",
        "ts-jest": "^29.0.3",
        "tsconfig": "workspace:*"
    }
}
