{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "custom"
    ],
    "plugins": ["react"],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "rules": {
        "react/react-in-jsx-scope": "off",
        "space-before-function-paren": "off",
        "arrow-body-style": "off",
        "prefer-arrow-callback": "off",
        "react-hooks/exhaustive-deps": "error"
    }
}
